@import url('https://fonts.googleapis.com/css?family=Didact+Gothic|Work+Sans:600');

@import "variables";
@import "header";
@import "content";
@import "footer";
@import "tables";

html, body, input[type=text] {
  font-family: 'Didact Gothic', sans-serif;
  font-size: 1.1em;

  h2, h3, b, strong {
    font-family: 'Work Sans', sans-serif;
  }
}

html, body {
  background: $footer;
  color: $text;
  margin: 0;
  padding: 0;
}

input[type=text] {
  margin: 0;
  padding: 2px * $whitespace;
  font-size: 80%;
}

.header {
  background: $header;
  background-image: url(<%= asset_path 'milky-way.jpg' %>);
  background-size: 100%;
  background-position: 50% 30%;
  color: $header-text;
  text-shadow: darken($header, 10%) 2px 2px 4px;
  border-bottom: 1px solid darken($header, 10%);
  padding: 0 (10px * $whitespace);

  a, a:hover, a:visited {
    color: $header-link;
  }
}

.content {
  background: $background;
  padding: (1em * $whitespace) (2em * $whitespace);

  @media (max-width: $tablet) {
    padding: (0.1em * $whitespace) (0.6em * $whitespace);
  }
}

.footer {
  background: $footer;
  color: $footer-text;
  text-shadow: darken($footer, 10%) 1px 1px 3px;
  border-top: 1px solid darken($footer, 10%);
  padding: 0 (10px * $whitespace);

  a, a:hover, a:visited {
    color: $footer-link;
  }

  h3 {
    a, a:hover, a:visited {
      color: $footer-text;
    }
  }

  p {
    margin: 0;
  }

  /* admin controls */
  .menu {
    float: none;
    max-width: 100%;
    padding: 1em;
    margin: 0;

    font-size: 70%;

    a {
      padding-right: 1em;
    }
  }
}

a, a:visited {
  color: $link;
  text-decoration: none;

  &:hover {
    text-decoration: underline;
  }

  &:active {
    color: $highlight;
  }
}

code {
  background: darken($background, 10%);
  border: thin solid darken($background, 15%);
  border-radius: 3px;
  padding: 2px 5px;
  vertical-align: 5%;
}

#notice {
  color: green;
}
